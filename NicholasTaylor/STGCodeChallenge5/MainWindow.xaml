<Window x:Class="STGCodeChallenge5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text to Number Converter" Height="253" Width="525">
    <Grid>
        <Label Content="Enter Text: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="69"/>
        <TextBox Name="txtText" Margin="84,10,10,0" TextWrapping="Wrap" Text="" Height="29" VerticalAlignment="Top" ToolTip="Enter the word representation of a whole number less than one trillion"/>
        <Button Content="Process Text" HorizontalAlignment="Left" Margin="162,44,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click_1" Height="36"/>

        <Label Name="lblValue" Content="Value:" HorizontalAlignment="Left" Margin="106,136,0,0" Visibility="Hidden" VerticalAlignment="Top"/>
        <Label Name="lblFinalValue" Content="" HorizontalAlignment="Left" TextBlock.FontSize="36px" Margin="162,115,0,0" VerticalAlignment="Top" Width="345" Height="61"/>
        <Label Name="lblErrorMessage" Foreground="Red" Content="" HorizontalAlignment="Left" Margin="63,184,0,0" VerticalAlignment="Top" Width="379"/>
    </Grid>
</Window>
